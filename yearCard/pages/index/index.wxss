.card-list {
  padding: 30rpx 30rpx 0 30rpx;
}

.card-list .item {
  position: relative;
  float: left;
  width: 335rpx;
  height: 420rpx;
  margin-bottom: 20rpx;
  margin-right: 20rpx;
  overflow: hidden;
  border-radius: 8rpx;
  
}
.card-list .item:nth-child(even) {
  margin-right: 0;
}

.card-list .item .cover {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}

/* 临时 */
.accredit-btn {
  margin: 40% auto;
  display: inline-block;
  margin-left: 50%;
  transform: translateX(-50%);
  color: #fff;
  padding: 10rpx 30rpx;
  background: #880105;
  border-radius: 20rpx;
  font-size: 30rpx;
}
