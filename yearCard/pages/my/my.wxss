@import "/pages/index/index.wxss";
.top-wrap {
  height: 300rpx;
  background: #fff;
  text-align: center;
  position: relative;
}
.userinfo {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}

.userAvatarUrl {
  margin-bottom: 10rpx;
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  display: inline-block;
  background: #fff;
}

.userNickName {
  display: block;
  font-size: 30rpx;
}

.hd {
  background: #fff;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 20rpx;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #ddd;
}

.hb {
  background: #fff;
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}
.icon-morentouxiangtubiao{
  font-size: 140rpx;
}

